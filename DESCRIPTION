Package: shorts
Type: Package
Title: Short Sprints
Authors@R:
    c(person(given = "Mladen",
           family = "JovanoviÄ‡",
           role = c("aut", "cre", "cph"),
           email = "coach.mladen.jovanovic@gmail.com",
           comment = c(ORCID = "0000-0002-4013-6530"))
